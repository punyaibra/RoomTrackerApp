<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Room Image Header -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/ivDetailImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient_overlay_bottom"/>

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="20dp"
                    android:text="Room Name"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="4"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Location Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_map"
                        app:tint="#1A73E8"
                        android:layout_marginEnd="12dp"/>
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                        <TextView
                            android:id="@+id/tvDetailLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Building A, Floor 1"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Stats Row (Capacity & Size) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search_bar"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:textAllCaps="true"/>
                        <TextView
                            android:id="@+id/tvDetailCapacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="18sp"
                            android:textColor="#1A73E8"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:textAllCaps="true"/>
                        <TextView
                            android:id="@+id/tvDetailSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10x10 m"
                            android:textSize="18sp"
                            android:textColor="#1A73E8"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Facilities -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facilities"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tvDetailFacilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- No Facilities Listed -"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tvDetailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No description available."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="32dp"/>

                <!-- Close Button -->
                <!-- Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnCloseDetail"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Close"
                        android:backgroundTint="#D32F2F"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:elevation="0dp"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnBookRoom"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Book Room"
                        android:backgroundTint="#1A73E8"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:elevation="0dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
