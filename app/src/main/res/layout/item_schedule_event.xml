<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Room Name and Active Status (if needed, but user said remove status) -->
        <!-- Just Room Name on right might look good -->
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengolahan Citra"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <!-- Time -->
                 <TextView
                    android:id="@+id/tvEventTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:30 - 10:00"
                    android:textColor="#1A73E8"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"/>

                <!-- User -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">
                    
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_nav_users"
                        app:tint="#757575"/>
                        
                    <TextView
                        android:id="@+id/tvEventUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin System"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Room Name -->
             <TextView
                android:id="@+id/tvEventRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditorium"
                android:textColor="#F57C00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#FFF3E0"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp"/>
                
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
