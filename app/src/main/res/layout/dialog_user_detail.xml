<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- User Name -->
        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naufal Ibra Prasetyo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <!-- University/Organization -->
        <TextView
            android:id="@+id/tvDetailOrganization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universitas Widya Gama"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="4dp"
            android:gravity="center"/>

        <!-- Role Badge -->
        <TextView
            android:id="@+id/tvDetailRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mahasiswa"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>

        <!-- Email Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
            
            <TextView
                android:id="@+id/tvDetailEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="naufalibra88@gmail.com"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- KTM Photo Section (for Mahasiswa) -->
        <LinearLayout
            android:id="@+id/layoutKtmSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto KTM"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
            
            <ImageView
                android:id="@+id/ivDetailKtm"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="KTM Photo"/>
        </LinearLayout>

        <!-- Fakultas Section -->
        <LinearLayout
            android:id="@+id/layoutFakultasSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fakultas"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
            
            <TextView
                android:id="@+id/tvDetailFakultas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teknik"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Prodi Section -->
        <LinearLayout
            android:id="@+id/layoutProdiSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Studi"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
            
            <TextView
                android:id="@+id/tvDetailProdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teknik Informatika"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Angkatan Section -->
        <LinearLayout
            android:id="@+id/layoutAngkatanSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angkatan"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
            
            <TextView
                android:id="@+id/tvDetailAngkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Status Section -->
        <LinearLayout
            android:id="@+id/layoutStatusSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Verifikasi"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
            
            <TextView
                android:id="@+id/tvDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified"
                android:textSize="15sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
