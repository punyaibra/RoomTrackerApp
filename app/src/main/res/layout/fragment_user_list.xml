<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    android:padding="16dp">

    <!-- Search Bar & Filter -->
    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_bar"
            android:drawableStart="@drawable/ic_search_small"
            android:drawablePadding="12dp"
            android:hint="Search users..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivFilterIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_rounded"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#FFFFFF"
            android:contentDescription="Filter" />
    </LinearLayout>

    <!-- Role Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutRoles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#00000000"
        app:tabMode="scrollable"
        app:layout_constraintTop_toBottomOf="@id/layoutSearch"/>

    <!-- Table Header -->
    <LinearLayout
        android:id="@+id/layoutTableHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_table_header"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutRoles">

        <!-- Placeholder for Avatar Column -->
        <View
            android:layout_width="62dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Role"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="Act"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"/>
    </LinearLayout>

    <!-- RecyclerView List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTableHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutPagination"/>

    <!-- Pagination Controls -->
    <LinearLayout
        android:id="@+id/layoutPagination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:background="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Previous Button -->
        <TextView
            android:id="@+id/btnPrevPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:textSize="12sp"
            android:textColor="#1A73E8"
            android:textStyle="bold"
            android:paddingVertical="6dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <!-- Page Numbers Container -->
        <LinearLayout
            android:id="@+id/layoutPageNumbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="6dp">
            
            <!-- Page numbers will be added dynamically -->
            
        </LinearLayout>

        <!-- Next Button -->
        <TextView
            android:id="@+id/btnNextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="12sp"
            android:textColor="#1A73E8"
            android:textStyle="bold"
            android:paddingVertical="6dp"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <!-- Items per page selector -->
        <Spinner
            android:id="@+id/spinnerItemsPerPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="8dp"/>

    </LinearLayout>

    <!-- Floating Action Button for Add User -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add User"
        app:tint="#FFFFFF"
        app:backgroundTint="#1A73E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutPagination"/>

</androidx.constraintlayout.widget.ConstraintLayout>
