<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Peminjaman"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#202124"
                android:layout_marginBottom="24dp"/>

            <!-- Room Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruangan"
                android:textSize="12sp"
                android:textColor="#5F6368"/>

            <TextView
                android:id="@+id/tvRoomNameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Ruangan"
                android:textSize="16sp"
                android:textColor="#202124"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_bottom_border"/>

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textSize="12sp"
                android:textColor="#5F6368"/>

            <EditText
                android:id="@+id/etBookingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pilih Tanggal"
                android:focusable="false"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="#202124"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_bottom_border"
                android:layout_marginBottom="20dp"/>

            <!-- Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam Mulai"
                        android:textSize="12sp"
                        android:textColor="#5F6368"/>

                    <EditText
                        android:id="@+id/etStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="00:00"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="16sp"
                        android:textColor="#202124"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/bg_bottom_border"/>
                </LinearLayout>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam Selesai"
                        android:textSize="12sp"
                        android:textColor="#5F6368"/>

                    <EditText
                        android:id="@+id/etEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="00:00"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="16sp"
                        android:textColor="#202124"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/bg_bottom_border"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Reason -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alasan Peminjaman"
                android:textSize="12sp"
                android:textColor="#5F6368"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/etBookingReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tuliskan keperluan acara..."
                android:inputType="textMultiLine"
                android:minLines="2"
                android:textSize="16sp"
                android:textColor="#202124"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_bottom_border"
                android:layout_marginBottom="32dp"/>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/btnCancelBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BATAL"
                    android:textColor="#D93025"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btnSubmitBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AJUKAN"
                    android:textColor="#1A73E8"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
