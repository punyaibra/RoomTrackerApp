<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/selectableItemBackground">

    <!-- Green Circle for Selected State -->
    <View
        android:id="@+id/viewSelectedBackground"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_calendar_selected"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Outlined Circle for Today (When not selected) -->
    <View
        android:id="@+id/viewTodayBackground"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_calendar_today"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Day Number -->
    <TextView
        android:id="@+id/tvCalendarDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="14sp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Red Dot for Events -->
    <View
        android:id="@+id/viewEventDot"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="#D32F2F"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tvCalendarDay"
        app:layout_constraintEnd_toEndOf="@id/tvCalendarDay"
        android:translationX="8dp"
        android:translationY="-4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
