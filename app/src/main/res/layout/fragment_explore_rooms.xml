<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/layoutSearchHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etExploreSearch"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_bar"
            android:drawableStart="@drawable/ic_search_small"
            android:drawablePadding="12dp"
            android:hint="Search rooms..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivFilters"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_filter_button_blue"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#FFFFFF"
            android:contentDescription="Filter" />

    </LinearLayout>

    <!-- Filter Scroll -->
    <HorizontalScrollView
        android:id="@+id/scrollFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/layoutSearchHeader">

        <LinearLayout
            android:id="@+id/layoutFilterChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <!-- Chips will be added dynamically or hardcoded here -->
            <TextView
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_selected"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:textColor="#1A73E8"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipLantai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lantai 1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:textColor="#1A73E8"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipLantai2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lantai 2"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:textColor="#1A73E8"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kapasitas > 30"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_unselected"
                android:textColor="#1A73E8"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Rooms RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExploreRooms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/scrollFilters"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_explore_room_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>
