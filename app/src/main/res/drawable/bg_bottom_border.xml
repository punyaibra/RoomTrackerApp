<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This item works by drawing a box with a stroke, but offsetting it
         so the top, left, and right borders are outside the view bounds,
         leaving only the bottom border visible. -->
    <item
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
        </shape>
    </item>
</layer-list>
